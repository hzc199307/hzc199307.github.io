<header class="article-info clearfix">
  <h1 itemprop="name" class="article-title">
    <% if(item.link) { %>
      <a href="<%- item.link %>" target="_blank" title="<%= item.title %>" class="article-url"><%= item.title %></a><% } else { %>
      <a href="<%- config.root %><%- item.path %>" title="<%= item.title %>" itemprop="url" class="article-url"><%= item.title %></a><% } %>
  </h1>
  <p class="article-author">By
       <% if(theme.author.google_plus){ %>
		<a href="https://plus.google.com/<%=theme.author.google_plus %>?rel=author" title="<%= config.author %>" target="_blank" itemprop="author"><%= config.author %></a>
		<% }else{ %>
		<a href="<%= config.root %>about" title="<%= config.author %>" target="_blank" itemprop="author"><%= config.author %></a>
		<% } %>
  </p>
		
  <p class="article-time">
    <% if (item.show_updated) {%>
			<time datetime="<%= date_xml(item.updated) %>" itemprop="dateUpdated"> <%= __('dateUpdated') %> <%= item.updated.format(config.date_format) %></time>
    <% } else { %>
			<time datetime="<%= date_xml(item.date) %>" itemprop="datePublished"> <%= __('datepublished') %> <%= item.date.format(config.date_format) %></time>
    <% } %>
		<!--用于显示浏览数-->
        &nbsp;/&nbsp; <span class="article-pageview">?</span> views
  </p>
  
